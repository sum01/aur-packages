# Maintainer: Sum1 https://github.com/sum01
pkgname=dying-light-mesa-fix
pkgver=1
pkgrel=1
pkgdesc="Shortcut to run Dying Light with Mesa OpenGL version 4.5." # This might need to be moved back to v3.x (min. v3.3) for compatibility, which is mesa min. v10.0
url="https://github.com/sum01/aur-packages/blob/master/dying-light-mesa-fix"
arch=('x86_64')
license=('custom:Unlicense') # not 100% sure I'm allowed to use a capital there, check later
depends=('mesa>=17.0.0-1' 'steam') # might not need steam? idk
#makedepends=('wget')
source=("https://unlicense.org/UNLICENSE"
        "https://github.com/sum01/aur-packages/blob/master/dying-light-mesa-fix/dying-light-mesa-fix.desktop"
        "https://github.com/sum01/aur-packages/blob/master/dying-light-mesa-fix/dl_linux_96x96.png")
sha256sums=('7e12e5df4bae12cb21581ba157ced20e1986a0508dd10d0e8a4ab9a4cf94e85c'
            'SKIP'
            '3b800224e7214071ea33837c899470ef01575edfc3cfe7b97005772b27a918fb') # fix SKIP's later

package() {
  mkdir -p $pkgdir/usr/share/{licenses/$pkgname,applications,pixmaps}/
  #wget -t 50 https://unlicense.org/UNLICENSE -P $pkgdir/usr/share/licenses/$pkgname/
  cp -r $srcdir/unlicense.org/UNLICENSE $pkgdir/usr/share/licenses/$pkgname/
  cp -r $srcdir/dl_linux_96x96.png $pkgdir/usr/share/pixmaps
  cp -r $srcdir/dying-light-mesa-fix.desktop $pkgdir/usr/share/applications
}
