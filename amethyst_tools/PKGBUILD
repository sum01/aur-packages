# Maintainer: sum01 <sum01@protonmail.com>
pkgname=amethyst_tools
pkgver=0.4.0
pkgrel=1
pkgdesc="Game development tools for the Amethyst engine."
url="https://github.com/amethyst/tools"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('gcc-libs')
makedepends=('cargo')
build() {
  cargo install amethyst_tools --root "$srcdir/$pkgname" --vers $pkgver -f
}
package() {
  install -Dm755 "$srcdir/$pkgname/bin/amethyst" "$pkgdir/usr/bin/amethyst"
}
